{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "outDir": "./dist/",
      "strict": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["**/*.ts", "support/index.js"]
  }
  